<style>
    .coming-soon {
        padding: 5rem 1.5rem;
        background: #f8fafc;
    }

    .container {
        max-width: 900px;
        margin: 0 auto;
    }

    .coming-soon-card {
        border-radius: 1.5rem;
        overflow: hidden;
        box-shadow:
            0 4px 6px -1px rgba(0, 0, 0, 0.1),
            0 10px 25px -5px rgba(37, 99, 235, 0.2),
            0 25px 50px -12px rgba(37, 99, 235, 0.25);
        animation: cardFloat 6s ease-in-out infinite;
    }

    @keyframes cardFloat {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-5px);
        }
    }

    .card-wrapper {
        position: relative;
        padding: 4rem 2rem;
        background: linear-gradient(
            135deg,
            #1e40af 0%,
            #3b82f6 50%,
            #1e3a8a 100%
        );
        overflow: hidden;
    }

    /* Enhanced frosted glass overlay with stronger blur -->  */
    .frosted-overlay {
        position: absolute;
        inset: 0;
        background: rgba(255, 255, 255, 0.08);
        backdrop-filter: blur(40px);
        -webkit-backdrop-filter: blur(40px);
        z-index: 5;
    }

    /* Added shimmer effect layer */
    .shimmer-layer {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            110deg,
            transparent 20%,
            rgba(255, 255, 255, 0.1) 40%,
            rgba(255, 255, 255, 0.2) 50%,
            rgba(255, 255, 255, 0.1) 60%,
            transparent 80%
        );
        background-size: 200% 100%;
        animation: shimmer 4s ease-in-out infinite;
        z-index: 6;
    }

    @keyframes shimmer {
        0% {
            background-position: 200% 0;
        }
        100% {
            background-position: -200% 0;
        }
    }

    /* Enhanced blur overlay with 6 layers and stronger blur */
    .blur-overlay {
        position: absolute;
        inset: 0;
        overflow: hidden;
    }

    .blur-layer {
        position: absolute;
        border-radius: 50%;
        filter: blur(100px);
        opacity: 0.8;
    }

    .blur-1 {
        width: 400px;
        height: 400px;
        top: -150px;
        left: -100px;
        background: rgba(96, 165, 250, 0.95);
        animation: moveBlur1 8s ease-in-out infinite;
    }

    .blur-2 {
        width: 350px;
        height: 350px;
        bottom: -120px;
        right: -80px;
        background: rgba(59, 130, 246, 0.95);
        animation: moveBlur2 10s ease-in-out infinite;
    }

    .blur-3 {
        width: 300px;
        height: 300px;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: rgba(147, 197, 253, 0.85);
        animation: moveBlur3 6s ease-in-out infinite;
    }

    .blur-4 {
        width: 250px;
        height: 250px;
        top: 10%;
        right: 15%;
        background: rgba(191, 219, 254, 0.9);
        animation: moveBlur4 7s ease-in-out infinite;
    }

    /* Added 2 more blur layers */
    .blur-5 {
        width: 280px;
        height: 280px;
        bottom: 20%;
        left: 10%;
        background: rgba(129, 140, 248, 0.85);
        animation: moveBlur5 9s ease-in-out infinite;
    }

    .blur-6 {
        width: 220px;
        height: 220px;
        top: 30%;
        left: 30%;
        background: rgba(165, 180, 252, 0.8);
        animation: moveBlur6 11s ease-in-out infinite;
    }

    @keyframes moveBlur1 {
        0%,
        100% {
            transform: translate(0, 0) scale(1) rotate(0deg);
        }
        33% {
            transform: translate(50px, 40px) scale(1.15) rotate(5deg);
        }
        66% {
            transform: translate(20px, 60px) scale(1.05) rotate(-3deg);
        }
    }

    @keyframes moveBlur2 {
        0%,
        100% {
            transform: translate(0, 0) scale(1) rotate(0deg);
        }
        33% {
            transform: translate(-45px, -35px) scale(1.2) rotate(-5deg);
        }
        66% {
            transform: translate(-20px, -50px) scale(1.1) rotate(3deg);
        }
    }

    @keyframes moveBlur3 {
        0%,
        100% {
            transform: translate(-50%, -50%) scale(1);
        }
        25% {
            transform: translate(-30%, -60%) scale(1.3);
        }
        50% {
            transform: translate(-60%, -40%) scale(1.15);
        }
        75% {
            transform: translate(-40%, -55%) scale(1.25);
        }
    }

    @keyframes moveBlur4 {
        0%,
        100% {
            transform: translate(0, 0) scale(1) rotate(0deg);
        }
        50% {
            transform: translate(-30px, 40px) scale(1.25) rotate(8deg);
        }
    }

    @keyframes moveBlur5 {
        0%,
        100% {
            transform: translate(0, 0) scale(1);
        }
        33% {
            transform: translate(40px, -30px) scale(1.2);
        }
        66% {
            transform: translate(-20px, -40px) scale(1.1);
        }
    }

    @keyframes moveBlur6 {
        0%,
        100% {
            transform: translate(0, 0) scale(1) rotate(0deg);
        }
        50% {
            transform: translate(30px, 25px) scale(1.3) rotate(-5deg);
        }
    }

    .card-content {
        position: relative;
        z-index: 10;
        text-align: center;
    }

    /* Added icon container with pulse rings */
    .icon-container {
        position: relative;
        display: inline-block;
        margin-bottom: 1.5rem;
    }

    .pulse-ring {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100px;
        height: 100px;
        border: 2px solid rgba(251, 191, 36, 0.5);
        border-radius: 50%;
        animation: pulseRing 2.5s ease-out infinite;
    }

    .pulse-ring-2 {
        animation-delay: 1.25s;
    }

    @keyframes pulseRing {
        0% {
            width: 80px;
            height: 80px;
            opacity: 1;
        }
        100% {
            width: 150px;
            height: 150px;
            opacity: 0;
        }
    }

    .icon-wrapper {
        position: relative;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        padding: 1.25rem;
        border-radius: 50%;
        color: #fbbf24;
        border: 2px solid rgba(255, 255, 255, 0.3);
        box-shadow:
            0 8px 32px rgba(0, 0, 0, 0.15),
            inset 0 0 20px rgba(255, 255, 255, 0.1);
        animation: iconGlow 3s ease-in-out infinite;
    }

    @keyframes iconGlow {
        0%,
        100% {
            box-shadow:
                0 8px 32px rgba(0, 0, 0, 0.15),
                inset 0 0 20px rgba(255, 255, 255, 0.1),
                0 0 20px rgba(251, 191, 36, 0.3);
        }
        50% {
            box-shadow:
                0 8px 32px rgba(0, 0, 0, 0.15),
                inset 0 0 20px rgba(255, 255, 255, 0.1),
                0 0 40px rgba(251, 191, 36, 0.5);
        }
    }

    /* Added text animations */
    .title {
        font-family: var(--font-display);
        font-size: 2.25rem;
        font-weight: 700;
        color: white;
        margin-bottom: 0.75rem;
        text-shadow: 0 2px 15px rgba(0, 0, 0, 0.3);
        animation:
            textFadeIn 1s ease-out,
            textGlow 4s ease-in-out infinite;
    }

    @keyframes textFadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes textGlow {
        0%,
        100% {
            text-shadow: 0 2px 15px rgba(0, 0, 0, 0.3);
        }
        50% {
            text-shadow:
                0 2px 25px rgba(255, 255, 255, 0.4),
                0 0 40px rgba(59, 130, 246, 0.3);
        }
    }

    .description {
        font-size: 1.125rem;
        color: rgba(255, 255, 255, 0.95);
        margin-bottom: 0.5rem;
        animation: textFadeIn 1s ease-out 0.2s backwards;
    }

    .social-note {
        font-size: 0.95rem;
        color: rgba(255, 255, 255, 0.8);
        font-style: italic;
        animation: textFadeIn 1s ease-out 0.4s backwards;
    }

    @media (max-width: 768px) {
        .coming-soon {
            padding: 3rem 1rem;
        }

        .card-wrapper {
            padding: 3rem 1.5rem;
        }

        .icon-wrapper svg {
            width: 40px;
            height: 40px;
        }

        .title {
            font-size: 1.75rem;
        }

        .blur-layer {
            filter: blur(80px);
        }
    }
</style>
