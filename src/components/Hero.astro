---
import { WHATSAPP_NUMBER } from '../config/global.js';

const slides = [
  {
    badge: "CALIDAD Y CONFIANZA A TU PUERTA",
    title: "DC Distribuciones",
    description: "Tu aliado estratégico en distribución de productos frescos y de calidad para negocios exitosos.",
    cta: "Ver Productos",
    ctaLink: "#productos",
    bgGradient: "linear-gradient(135deg, #1e40af 0%, #3b82f6 50%, #f59e0b 100%)"
  },
  {
    badge: "HUEVOS FRESCOS DE PRIMERA",
    title: "Calidad Garantizada",
    description: "Huevos seleccionados de primera calidad, frescos y con entrega directa a tu negocio.",
    cta: "Conocer más",
    ctaLink: "/huevos",
    bgGradient: "linear-gradient(135deg, #f59e0b 0%, #fbbf24 50%, #3b82f6 100%)"
  },
  {
    badge: "MAYORISTAS Y MINORISTAS",
    title: "Precios Competitivos",
    description: "Los mejores precios del mercado para tu negocio. Bandejas y cajas disponibles.",
    cta: "Contactar",
    ctaLink: `https://wa.me/${WHATSAPP_NUMBER}?text=Hola, me interesa conocer sus precios`,
    bgGradient: "linear-gradient(135deg, #1e3a8a 0%, #2563eb 50%, #fbbf24 100%)"
  }
];
---

<section id="inicio" class="hero">
  <div class="swiper hero-swiper">
    <div class="swiper-wrapper">
      {slides.map((slide, index) => (
        <div class="swiper-slide">
          <div class="hero-slide">
            <!-- Background with gradient colors from logo instead of images -->
            <div class="hero-bg" style={`background: ${slide.bgGradient}`}>
              <div class="hero-bg-pattern"></div>
              <div class="hero-bg-overlay"></div>
            </div>
            
            <div class="container hero-container">
              <div class="hero-content-panel">
                <div class="hero-panel-glow"></div>
                <span class="hero-badge">{slide.badge}</span>
                <h1 class="hero-title">{slide.title}</h1>
                <p class="hero-description">{slide.description}</p>
                <a 
                  href={slide.ctaLink} 
                  class="btn btn-accent hero-btn"
                  target={slide.ctaLink.startsWith('http') ? '_blank' : undefined}
                  rel={slide.ctaLink.startsWith('http') ? 'noopener noreferrer' : undefined}
                >
                  {slide.cta}
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M5 12h14M12 5l7 7-7 7"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="swiper-pagination"></div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 70vh;
    padding-top: 4.5rem;
  }

  .hero-swiper {
    height: calc(70vh - 4.5rem);
  }

  .swiper-slide {
    height: 100%;
  }

  .hero-slide {
    position: relative;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    overflow: hidden;
  }

  /* Enhanced background with gradient colors matching logo */
  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: -1;
    transition: transform 1.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  /* Added animated pattern overlay for visual interest */
  .hero-bg-pattern {
    position: absolute;
    inset: 0;
    background-image: 
      radial-gradient(circle at 20% 50%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(255, 255, 255, 0.08) 0%, transparent 50%),
      radial-gradient(circle at 40% 20%, rgba(255, 255, 255, 0.06) 0%, transparent 50%);
    animation: patternMove 20s ease-in-out infinite;
  }

  @keyframes patternMove {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(30px, -20px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 30px) scale(0.95);
    }
  }

  .swiper-slide-active .hero-bg {
    animation: zoomInSmooth 12s ease-out forwards;
  }

  @keyframes zoomInSmooth {
    from {
      transform: scale(1);
    }
    to {
      transform: scale(1.06);
    }
  }

  .hero-bg-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(270deg, 
      transparent 0%,
      rgba(0, 0, 0, 0.1) 30%, 
      rgba(0, 0, 0, 0.35) 50%, 
      rgba(0, 0, 0, 0.55) 70%,
      rgba(0, 0, 0, 0.7) 100%
    );
  }

  .hero-container {
    position: relative;
    width: 100%;
    padding: 2rem;
    display: flex;
    justify-content: flex-start;
    align-items: center;
  }

  .hero-content-panel {
    position: relative;
    max-width: 600px;
    padding: 3rem 2.5rem;
    background: rgba(255, 255, 255, 0.06);
    backdrop-filter: blur(32px) saturate(160%);
    -webkit-backdrop-filter: blur(32px) saturate(160%);
    border-radius: 1.75rem;
    border: 1px solid rgba(255, 255, 255, 0.12);
    box-shadow: 
      0 24px 64px rgba(0, 0, 0, 0.4),
      0 8px 32px rgba(0, 0, 0, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.08);
    overflow: hidden;
    transition: all 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .hero-panel-glow {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(245, 158, 11, 0.12) 0%, transparent 65%);
    animation: rotateGlowSmooth 10s linear infinite;
    pointer-events: none;
  }

  @keyframes rotateGlowSmooth {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .hero-badge {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.15em;
    color: white;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, rgba(245, 158, 11, 0.25), rgba(251, 191, 36, 0.2));
    padding: 0.5rem 1.25rem;
    border-radius: 9999px;
    border: 1px solid rgba(245, 158, 11, 0.35);
    backdrop-filter: blur(8px);
    position: relative;
    z-index: 1;
  }

  .hero-title {
    font-family: var(--font-display);
    font-size: 3.5rem;
    font-weight: 900;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    color: var(--color-white);
    text-shadow: 
      0 2px 8px rgba(0, 0, 0, 0.3),
      0 4px 16px rgba(0, 0, 0, 0.2);
    position: relative;
    z-index: 1;
  }

  .hero-description {
    font-size: 1.125rem;
    margin-bottom: 2.5rem;
    color: rgba(255, 255, 255, 0.97);
    line-height: 1.7;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    position: relative;
    z-index: 1;
  }

  .hero-btn {
    font-size: 1rem;
    padding: 1rem 2rem;
    position: relative;
    z-index: 1;
    box-shadow: 0 8px 24px rgba(245, 158, 11, 0.35);
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .hero-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 32px rgba(245, 158, 11, 0.45);
  }

  .hero-swiper :global(.swiper-pagination) {
    bottom: 2.5rem;
    z-index: 15;
  }

  .hero-swiper :global(.swiper-pagination-bullet) {
    width: 0.625rem;
    height: 0.625rem;
    background-color: rgba(255, 255, 255, 0.5);
    opacity: 1;
    transition: all 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    backdrop-filter: blur(4px);
  }

  .hero-swiper :global(.swiper-pagination-bullet-active) {
    width: 2.5rem;
    border-radius: 0.375rem;
    background-color: var(--color-accent);
    box-shadow: 0 4px 12px rgba(245, 158, 11, 0.5);
  }

  .hero-swiper :global(.swiper-button-prev),
  .hero-swiper :global(.swiper-button-next) {
    width: 3.5rem;
    height: 3.5rem;
    background-color: rgba(255, 255, 255, 0.12);
    border-radius: 50%;
    color: var(--color-white);
    backdrop-filter: blur(16px);
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    border: 1px solid rgba(255, 255, 255, 0.2);
    z-index: 15;
  }

  .hero-swiper :global(.swiper-button-prev:hover),
  .hero-swiper :global(.swiper-button-next:hover) {
    background-color: rgba(255, 255, 255, 0.25);
    transform: scale(1.1);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
  }

  .hero-swiper :global(.swiper-button-prev::after),
  .hero-swiper :global(.swiper-button-next::after) {
    font-size: 1.25rem;
    font-weight: 700;
  }

  .hero-swiper :global(.swiper-slide-active) .hero-badge {
    animation: slideInLeft 1s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
  }

  .hero-swiper :global(.swiper-slide-active) .hero-title {
    animation: slideInLeft 1s cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.15s forwards;
  }

  .hero-swiper :global(.swiper-slide-active) .hero-description {
    animation: slideInLeft 1s cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.3s forwards;
  }

  .hero-swiper :global(.swiper-slide-active) .hero-btn {
    animation: slideInLeft 1s cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.45s forwards;
  }

  .hero-swiper :global(.swiper-slide-active) .hero-content-panel {
    animation: panelFadeInLeft 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
  }

  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes panelFadeInLeft {
    from {
      opacity: 0;
      transform: translateX(-40px) scale(0.96);
    }
    to {
      opacity: 1;
      transform: translateX(0) scale(1);
    }
  }

  @media (max-width: 1024px) {
    .hero-container {
      justify-content: center;
    }

    .hero-content-panel {
      max-width: 500px;
    }

    .hero-title {
      font-size: 2.75rem;
    }

    .hero-bg-overlay {
      background: linear-gradient(180deg, 
        rgba(0, 0, 0, 0.3) 0%, 
        rgba(0, 0, 0, 0.5) 50%, 
        rgba(0, 0, 0, 0.65) 100%
      );
    }
  }

  @media (max-width: 768px) {
    .hero {
      min-height: 60vh;
    }

    .hero-swiper {
      height: calc(60vh - 4.5rem);
    }

    .hero-content-panel {
      padding: 1.75rem 1.5rem;
      max-width: 100%;
      margin: 0 0.75rem;
      margin-bottom: 5rem;
    }

    .hero-title {
      font-size: 1.75rem;
      margin-bottom: 1rem;
    }

    .hero-description {
      font-size: 0.9375rem;
      margin-bottom: 1.5rem;
      line-height: 1.6;
    }

    .hero-btn {
      padding: 0.875rem 1.5rem;
      font-size: 0.9375rem;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .hero-swiper :global(.swiper-button-prev),
    .hero-swiper :global(.swiper-button-next) {
      display: none;
    }

    .hero-swiper :global(.swiper-pagination) {
      bottom: 1.5rem;
    }

    .hero-badge {
      font-size: 0.6875rem;
      padding: 0.375rem 1rem;
      margin-bottom: 1rem;
    }

    .hero-panel-glow {
      display: none;
    }

    .hero-container {
      padding: 1.5rem 0.75rem;
    }
  }

  @media (max-width: 480px) {
    .hero-title {
      font-size: 1.5rem;
    }

    .hero-description {
      font-size: 0.875rem;
    }

    .hero-content-panel {
      padding: 1.5rem 1.25rem;
      margin: 0 0.5rem;
      margin-bottom: 4.5rem;
    }

    .hero-btn {
      padding: 0.75rem 1.25rem;
      font-size: 0.875rem;
    }

    .hero-badge {
      font-size: 0.625rem;
      padding: 0.375rem 0.875rem;
    }
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    if (typeof Swiper !== 'undefined') {
      new Swiper('.hero-swiper', {
        loop: true,
        autoplay: {
          delay: 6500,
          disableOnInteraction: false,
        },
        speed: 1800,
        effect: 'fade',
        fadeEffect: {
          crossFade: true
        },
        pagination: {
          el: '.swiper-pagination',
          clickable: true,
        },
        navigation: {
          nextEl: '.swiper-button-next',
          prevEl: '.swiper-button-prev',
        },
        on: {
          transitionStart: function() {
            this.params.speed = 1800;
          }
        }
      });
    }
  });
</script>
