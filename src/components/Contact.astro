---
import {
    WHATSAPP_NUMBER,
    WHATSAPP_MESSAGE,
    EMAIL,
    BUSINESS_HOURS,
} from "../config/global.js";
---

<section id="contacto" class="contact">
    <div class="container">
        <div class="contact-header">
            <h2 class="section-title">¿Listo para hacer tu pedido?</h2>
            <p class="section-subtitle">
                Estamos aquí para atenderte. Elige el medio que prefieras para
                comunicarte con nosotros.
            </p>
        </div>

        <div class="contact-grid">
            <!-- WhatsApp - Main CTA -->
            <a
                href={`https://wa.me/${WHATSAPP_NUMBER}?text=${encodeURIComponent(WHATSAPP_MESSAGE)}`}
                class="contact-card whatsapp-card"
                target="_blank"
                rel="noopener noreferrer"
            >
                <div class="card-glow"></div>
                <div class="card-inner">
                    <div class="icon-wrapper icon-whatsapp">
                        <svg
                            width="36"
                            height="36"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                        >
                            <path
                                d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
                            ></path>
                        </svg>
                    </div>
                    <div class="card-text">
                        <h3>WhatsApp</h3>
                        <p>Respuesta inmediata para tus consultas y pedidos</p>
                        <span class="card-action">
                            Escribir ahora
                            <svg
                                width="18"
                                height="18"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2.5"
                            >
                                <path d="M5 12h14M12 5l7 7-7 7"></path>
                            </svg>
                        </span>
                    </div>
                </div>
            </a>

            <!-- Hours -->
            <div class="contact-card info-card">
                <div class="card-inner">
                    <div class="icon-wrapper icon-hours">
                        <svg
                            width="32"
                            height="32"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <circle cx="12" cy="12" r="10"></circle>
                            <polyline points="12 6 12 12 16 14"></polyline>
                        </svg>
                    </div>
                    <div class="card-text">
                        <h3>Horario de Atención</h3>
                        <p class="hours-text">{BUSINESS_HOURS}</p>
                        <!-- <span class="status-badge">
                            <span class="status-dot"></span>
                            Disponibles ahora
                        </span> -->
                    </div>
                </div>
            </div>

            <!-- Email -->
            <a href={`mailto:${EMAIL}`} class="contact-card info-card">
                <div class="card-inner">
                    <div class="icon-wrapper icon-email">
                        <svg
                            width="32"
                            height="32"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <rect width="20" height="16" x="2" y="4" rx="2"
                            ></rect>
                            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"
                            ></path>
                        </svg>
                    </div>
                    <div class="card-text">
                        <h3>Correo Electrónico</h3>
                        <p class="email-text">{EMAIL}</p>
                        <span class="card-action-secondary">
                            Enviar correo
                            <svg
                                width="16"
                                height="16"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <path d="M5 12h14M12 5l7 7-7 7"></path>
                            </svg>
                        </span>
                    </div>
                </div>
            </a>
        </div>
    </div>
</section>

<style>
    .contact {
        padding: 6rem 0;
        background: linear-gradient(180deg, #ffffff 0%, #f8fafc 100%);
    }

    .contact-header {
        text-align: center;
        max-width: 40rem;
        margin: 0 auto 4rem;
    }

    .section-badge {
        display: inline-block;
        background: linear-gradient(135deg, var(--color-primary), #60a5fa);
        color: white;
        padding: 0.5rem 1.25rem;
        border-radius: 9999px;
        font-size: 0.8125rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: 1.25rem;
    }

    .section-title {
        font-family: var(--font-heading);
        font-size: 2.75rem;
        font-weight: 800;
        color: var(--color-gray-900);
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    .section-subtitle {
        font-size: 1.125rem;
        color: var(--color-gray-500);
        line-height: 1.7;
    }

    .contact-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
        max-width: 56rem;
        margin: 0 auto;
    }

    .contact-card {
        position: relative;
        border-radius: 1.25rem;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        overflow: hidden;
    }

    .contact-card:hover {
        transform: translateY(-6px);
    }

    /* WhatsApp Card - Full width on first row */
    .whatsapp-card {
        grid-column: span 2;
        background: linear-gradient(135deg, #25d366 0%, #128c7e 100%);
        color: white;
        box-shadow: 0 10px 40px rgba(37, 211, 102, 0.25);
    }

    .whatsapp-card:hover {
        box-shadow: 0 20px 50px rgba(37, 211, 102, 0.35);
    }

    .card-glow {
        position: absolute;
        top: -50%;
        right: -20%;
        width: 50%;
        height: 200%;
        background: radial-gradient(
            ellipse,
            rgba(255, 255, 255, 0.15) 0%,
            transparent 70%
        );
        pointer-events: none;
    }

    .card-inner {
        position: relative;
        display: flex;
        align-items: center;
        gap: 2rem;
        padding: 2.5rem;
    }

    .icon-wrapper {
        flex-shrink: 0;
        width: 5rem;
        height: 5rem;
        border-radius: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: transform 0.3s ease;
    }

    .contact-card:hover .icon-wrapper {
        transform: scale(1.05) rotate(-3deg);
    }

    .icon-whatsapp {
        background-color: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(8px);
    }

    .icon-hours {
        background: linear-gradient(135deg, var(--color-primary), #60a5fa);
        color: white;
    }

    .icon-email {
        background: linear-gradient(135deg, var(--color-accent), #fcd34d);
        color: #1e3a5f;
    }

    .card-text {
        flex: 1;
    }

    .card-text h3 {
        font-family: var(--font-heading);
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .whatsapp-card .card-text h3 {
        color: white;
    }

    .card-text p {
        font-size: 1rem;
        line-height: 1.6;
        margin-bottom: 0.75rem;
    }

    .whatsapp-card .card-text p {
        color: rgba(255, 255, 255, 0.9);
    }

    .card-action {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 600;
        font-size: 1rem;
        color: white;
        padding: 0.75rem 1.5rem;
        background-color: rgba(255, 255, 255, 0.2);
        border-radius: 9999px;
        transition: all 0.3s ease;
    }

    .whatsapp-card:hover .card-action {
        background-color: rgba(255, 255, 255, 0.3);
        gap: 0.75rem;
    }

    /* Info Cards */
    .info-card {
        background: white;
        border: 1px solid var(--color-gray-100);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    }

    .info-card:hover {
        box-shadow: 0 12px 35px rgba(0, 0, 0, 0.1);
        border-color: transparent;
    }

    .info-card .card-inner {
        padding: 2rem;
    }

    .info-card .card-text h3 {
        color: var(--color-gray-900);
        font-size: 1.25rem;
    }

    .info-card .card-text p {
        color: var(--color-gray-500);
    }

    .hours-text {
        font-weight: 500;
        color: var(--color-gray-700) !important;
    }

    .email-text {
        font-weight: 500;
        color: var(--color-primary) !important;
        word-break: break-all;
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.8125rem;
        font-weight: 600;
        color: #10b981;
        background-color: #ecfdf5;
        padding: 0.375rem 0.875rem;
        border-radius: 9999px;
    }

    .status-dot {
        width: 0.5rem;
        height: 0.5rem;
        background-color: #10b981;
        border-radius: 50%;
        animation: pulse-dot 2s ease-in-out infinite;
    }

    @keyframes pulse-dot {
        0%,
        100% {
            opacity: 1;
            transform: scale(1);
        }
        50% {
            opacity: 0.6;
            transform: scale(1.2);
        }
    }

    .card-action-secondary {
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--color-primary);
        transition: gap 0.3s ease;
    }

    .info-card:hover .card-action-secondary {
        gap: 0.625rem;
    }

    @media (max-width: 768px) {
        .contact {
            padding: 4rem 0;
        }

        .section-title {
            font-size: 2rem;
        }

        .contact-grid {
            grid-template-columns: 1fr;
        }

        .whatsapp-card {
            grid-column: span 1;
        }

        .card-inner {
            flex-direction: column;
            text-align: center;
            gap: 1.25rem;
            padding: 2rem 1.5rem;
        }

        .icon-wrapper {
            width: 4rem;
            height: 4rem;
        }
    }
</style>
