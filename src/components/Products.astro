---
import { WHATSAPP_NUMBER } from "../config/global.js";

const products = [
    {
        id: 1,
        image: "/images/huevos-color-primera.jpg",
        name: "Bandeja Primera - Huevos de Color",
        description:
            "Bandeja de primera calidad con 30 huevos de color. Frescos y seleccionados.",
        price: 6500,
        unit: "Bandeja 30 unidades",
        category: "HUEVOS",
        available: true,
    },
    {
        id: 2,
        image: "/images/huevos-blancos-primera.jpg",
        name: "Bandeja Primera - Huevos Blancos",
        description:
            "Bandeja de primera calidad con 30 huevos blancos. Frescos y seleccionados.",
        price: 5500,
        unit: "Bandeja 30 unidades",
        category: "HUEVOS",
        available: true,
    },
    {
        id: 3,
        image: "/images/caja-primera-color.jpg",
        name: "Caja 180 Huevos - Color",
        description:
            "Caja completa de 180 huevos de color de primera calidad. Ideal para negocios y emprendimientos.",
        price: 28500,
        unit: "Caja 180 unidades",
        category: "HUEVOS",
        available: true,
    },
    {
        id: 4,
        image: "/images/caja-primera-blancos.jpg",
        name: "Caja 180 Huevos - Blancos",
        description:
            "Caja completa de 180 huevos blancos de primera calidad. Ideal para negocios y emprendimientos.",
        price: 27500,
        unit: "Caja 180 unidades",
        category: "HUEVOS",
        available: true,
    },
];

const formatPrice = (price: any) => {
    return new Intl.NumberFormat("es-CL").format(price);
};
---

<section id="productos" class="products section">
    <div class="container">
        <h2 class="section-title">Nuestros Productos</h2>
        <div class="section-divider"></div>
        <p class="section-subtitle">
            Productos frescos y de calidad garantizada para tu negocio
        </p>

        <div class="products-grid">
            {
                products.map((product) => (
                    <article class="product-card">
                        <div class="product-image-wrapper">
                            <img
                                src={product.image || "/placeholder.svg"}
                                alt={product.name}
                                loading="lazy"
                            />
                            {product.available && (
                                <span class="product-badge">Disponible</span>
                            )}
                        </div>

                        <div class="product-content">
                            <div class="product-category">
                                <svg
                                    width="16"
                                    height="16"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <ellipse cx="12" cy="12" rx="8" ry="10" />
                                </svg>
                                <span>{product.category}</span>
                            </div>

                            <h3 class="product-name">{product.name}</h3>
                            <p class="product-description">
                                {product.description}
                            </p>

                            <div class="product-pricing">
                                <span class="product-price">
                                    ${formatPrice(product.price)}
                                </span>
                                <span class="product-currency">CLP</span>
                            </div>
                            <span class="product-unit">{product.unit}</span>

                            <a
                                href={`https://wa.me/${WHATSAPP_NUMBER}?text=Hola, me interesa el producto: ${product.name} - $${formatPrice(product.price)} CLP`}
                                class="btn btn-primary product-btn"
                                target="_blank"
                                rel="noopener noreferrer"
                            >
                                <svg
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="currentColor"
                                >
                                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z" />
                                </svg>
                                Hacer pedido por WhatsApp
                            </a>
                        </div>
                    </article>
                ))
            }
        </div>

        <!-- Added custom quote banner section -->
        <div class="custom-quote-banner">
            <span class="quote-icon">ðŸ’¼</span>
            <p class="quote-text">
                Â¿Necesitas un producto en particular o una cotizaciÃ³n
                personalizada?
                <a
                    href={`https://wa.me/${WHATSAPP_NUMBER}?text=Hola, necesito una cotizaciÃ³n personalizada`}
                    class="quote-link"
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    ContÃ¡ctanos por WhatsApp
                </a>
            </p>
        </div>
    </div>
</section>

<style>
    .products {
        background-color: var(--color-gray-50);
    }

    .products-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .product-card {
        background-color: var(--color-white);
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: var(--shadow-card);
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
    }

    .product-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-xl);
    }

    .product-image-wrapper {
        position: relative;
        aspect-ratio: 4/3;
        overflow: hidden;
        background-color: var(--color-gray-100);
    }

    .product-image-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .product-card:hover .product-image-wrapper img {
        transform: scale(1.05);
    }

    .product-badge {
        position: absolute;
        top: 0.75rem;
        right: 0.75rem;
        background-color: var(--color-success);
        color: var(--color-white);
        font-size: 0.75rem;
        font-weight: 600;
        padding: 0.375rem 0.75rem;
        border-radius: 9999px;
    }

    .product-content {
        padding: 1.25rem;
        display: flex;
        flex-direction: column;
        flex: 1;
    }

    .product-category {
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
        color: var(--color-primary);
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.5rem;
    }

    .product-category svg {
        width: 14px;
        height: 14px;
    }

    .product-name {
        font-size: 1.0625rem;
        font-weight: 700;
        color: var(--color-gray-900);
        margin-bottom: 0.5rem;
        line-height: 1.3;
    }

    .product-description {
        font-size: 0.875rem;
        color: var(--color-gray-500);
        line-height: 1.5;
        margin-bottom: 1rem;
        flex: 1;
    }

    .product-pricing {
        display: flex;
        align-items: baseline;
        gap: 0.375rem;
        margin-bottom: 0.25rem;
    }

    .product-price {
        font-size: 1.625rem;
        font-weight: 700;
        color: var(--color-gray-900);
    }

    .product-currency {
        font-size: 0.875rem;
        color: var(--color-gray-400);
        font-weight: 500;
    }

    .product-unit {
        font-size: 0.8125rem;
        color: var(--color-gray-400);
        margin-bottom: 1rem;
    }

    .product-btn {
        width: 100%;
        padding: 0.875rem 1rem;
        font-size: 0.875rem;
        margin-top: auto;
    }

    /* Custom quote banner styles */
    .custom-quote-banner {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        background: linear-gradient(
            135deg,
            var(--color-primary-50) 0%,
            rgba(245, 158, 11, 0.1) 100%
        );
        border: 2px solid rgba(59, 130, 246, 0.3);
        border-radius: 1rem;
        padding: 1.5rem 2.5rem;
        backdrop-filter: blur(4px);
    }

    .quote-icon {
        font-size: 1.5rem;
    }

    .quote-text {
        color: var(--color-gray-700);
        font-size: 1.0625rem;
        font-weight: 600;
    }

    .quote-link {
        color: var(--color-primary);
        font-weight: 700;
        text-decoration: underline;
        text-decoration-thickness: 2px;
        text-underline-offset: 4px;
        margin-left: 0.25rem;
        transition: all 0.2s ease;
    }

    .quote-link:hover {
        color: var(--color-primary-dark);
        transform: scale(1.02);
        display: inline-block;
    }

    @media (max-width: 1024px) {
        .products-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 640px) {
        .products-grid {
            grid-template-columns: 1fr;
            max-width: 400px;
            margin-left: auto;
            margin-right: auto;
        }

        .custom-quote-banner {
            flex-direction: column;
            text-align: center;
            padding: 1.5rem 1rem;
        }

        .quote-text {
            font-size: 1rem;
        }
    }
</style>
