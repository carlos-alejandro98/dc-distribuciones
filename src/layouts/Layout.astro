---
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="DC Distribuciones - Tu aliado estratégico en distribución de productos frescos y de calidad para negocios exitosos."
		/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		//Imagen para compartir en redes sociales
		<meta property="og:title" content="DC Distribuciones" />
		<meta
			property="og:description"
			content="Tu aliado estratégico en distribución de productos frescos y de calidad para negocios exitosos."
		/>
		<meta property="og:image" content="images/logo-dc.png" />
		<meta property="og:type" content="website" />
		<meta name="twitter:title" content="DC Distribuciones" />
		<meta
			name="twitter:description"
			content="Tu aliado estratégico en distribución de productos frescos y de calidad para negocios exitosos
		"/>
		<meta name="twitter:image" content="images/logo-dc.png" />
		<!-- Swiper CSS from CDN -->
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
		/>
		<!-- Professional typography with DM Sans and Playfair Display -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=DM+Sans:opsz,wght@9..40,400;9..40,500;9..40,600;9..40,700&family=Playfair+Display:wght@700;800;900&display=swap"
			rel="stylesheet"
		/>
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<!-- Swiper JS from CDN - moved before closing body -->
		<script
			is:inline
			src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"
		></script>
	</body>
</html>

<style is:global>
	*,
	*::before,
	*::after {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	:root {
		--color-primary: #3b82f6;
		--color-primary-dark: #2563eb;
		--color-primary-light: #60a5fa;
		--color-primary-50: #eff6ff;
		--color-accent: #f59e0b;
		--color-accent-dark: #d97706;
		--color-accent-light: #fde68a;
		--color-success: #22c55e;
		--color-success-light: #dcfce7;
		--color-white: #ffffff;
		--color-gray-50: #f9fafb;
		--color-gray-100: #f3f4f6;
		--color-gray-200: #e5e7eb;
		--color-gray-300: #d1d5db;
		--color-gray-400: #9ca3af;
		--color-gray-500: #6b7280;
		--color-gray-600: #4b5563;
		--color-gray-700: #374151;
		--color-gray-800: #1f2937;
		--color-gray-900: #111827;

		/* Updated font variables */
		--font-sans: "DM Sans", system-ui, -apple-system, BlinkMacSystemFont,
			"Segoe UI", Roboto, sans-serif;
		--font-display: "DM Sans", system-ui, -apple-system, BlinkMacSystemFont,
			"Segoe UI", Roboto, sans-serif;

		--shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
		--shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1),
			0 2px 4px -2px rgb(0 0 0 / 0.1);
		--shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1),
			0 4px 6px -4px rgb(0 0 0 / 0.1);
		--shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1),
			0 8px 10px -6px rgb(0 0 0 / 0.1);
		--shadow-card: 0 4px 20px rgba(0, 0, 0, 0.08);
	}

	html {
		scroll-behavior: smooth;
	}

	body {
		font-family: var(--font-sans);
		line-height: 1.6;
		color: var(--color-gray-700);
		background-color: var(--color-white);
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}

	a {
		text-decoration: none;
		color: inherit;
	}

	ul {
		list-style: none;
	}

	img {
		max-width: 100%;
		height: auto;
		display: block;
	}

	.container {
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1.5rem;
	}

	.section {
		padding: 5rem 0;
	}

	.section-title {
		font-family: var(--font-display);
		font-size: 2.75rem;
		font-weight: 900;
		text-align: center;
		margin-bottom: 1rem;
		color: var(--color-gray-900);
		letter-spacing: -0.02em;
	}

	.section-title span {
		color: var(--color-accent);
	}

	.section-divider {
		width: 4rem;
		height: 4px;
		background-color: var(--color-primary);
		margin: 0 auto 1.5rem;
		border-radius: 2px;
	}

	.section-subtitle {
		text-align: center;
		color: var(--color-gray-500);
		margin-bottom: 3rem;
		max-width: 600px;
		margin-left: auto;
		margin-right: auto;
		font-size: 1.0625rem;
		line-height: 1.7;
	}

	.btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
		padding: 0.875rem 1.75rem;
		border-radius: 0.5rem;
		font-weight: 600;
		font-size: 0.9375rem;
		cursor: pointer;
		border: none;
		transition: all 0.2s ease;
		font-family: var(--font-sans);
	}

	.btn-primary {
		background-color: var(--color-primary);
		color: var(--color-white);
	}

	.btn-primary:hover {
		background-color: var(--color-primary-dark);
		transform: translateY(-1px);
		box-shadow: var(--shadow-md);
	}

	.btn-accent {
		background-color: var(--color-accent);
		color: var(--color-gray-900);
	}

	.btn-accent:hover {
		background-color: var(--color-accent-dark);
		transform: translateY(-1px);
		box-shadow: var(--shadow-md);
	}

	.btn-outline {
		background-color: transparent;
		border: 2px solid var(--color-primary);
		color: var(--color-primary);
	}

	.btn-outline:hover {
		background-color: var(--color-primary);
		color: var(--color-white);
	}

	@media (max-width: 768px) {
		.section {
			padding: 4rem 0;
		}

		.section-title {
			font-size: 2rem;
		}

		.container {
			padding: 0 1rem;
		}
	}
</style>
